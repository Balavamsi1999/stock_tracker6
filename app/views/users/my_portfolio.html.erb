<h1> My Portfolio </h1>

<div class='search-area'>
  <h3> Search stocks</h3>
  
  <%= form_tag search_stock_path ,remote:true, method: :get do %>
    <div class="row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock , params[:stock] , placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="col-sm-3 no-left-padding">
        <button class="btn btn-outline-success btn-rounded btn-sm my-0  form-control-lg " type="submit">Search</button>
        </div>

    </div>
  <% end%>
</div>

<div id="results">
</div> 

<% if !@tracked_stocks.empty? %>
    <%= render'stocks/list' %>
<%end %>

